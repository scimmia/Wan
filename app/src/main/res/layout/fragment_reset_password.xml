<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
            layout="@layout/toolbar"
            android:id="@+id/toolbar_reset_password"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">
        <LinearLayout
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.rengwuxian.materialedittext.MaterialEditText
                    style="@style/one_line_material"
                    android:id="@+id/et_rp_old_password"
                    android:hint="@string/rp_old_password"
                    android:inputType="textPassword"
                    app:met_baseColor="@color/material_base_color"
                    app:met_primaryColor="@color/material_primary_color"
                    app:met_floatingLabelTextSize ="@dimen/material_label_textsize"
                    app:met_floatingLabel="highlight"
                    app:met_singleLineEllipsis="true"  />
            <com.rengwuxian.materialedittext.MaterialEditText
                    style="@style/one_line_material"
                    android:id="@+id/et_rp_password"
                    android:hint="@string/change_password"
                    android:inputType="textPassword"
                    app:met_baseColor="@color/material_base_color"
                    app:met_primaryColor="@color/material_primary_color"
                    app:met_floatingLabelTextSize ="@dimen/material_label_textsize"
                    app:met_floatingLabel="highlight"
                    app:met_singleLineEllipsis="true"  />
            <com.rengwuxian.materialedittext.MaterialEditText
                    style="@style/one_line_material"
                    android:id="@+id/et_rp_password_again"
                    android:hint="@string/change_password_again"
                    android:inputType="textPassword"
                    app:met_baseColor="@color/material_base_color"
                    app:met_primaryColor="@color/material_primary_color"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelTextSize ="@dimen/material_label_textsize"
                    app:met_singleLineEllipsis="true"/>

            <Button
                    android:id="@+id/btn_rp_commit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/material_primary_color"
                    android:text="@string/commit"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>

