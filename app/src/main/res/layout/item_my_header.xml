<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/bg_my_header"
>
    <LinearLayout
            android:id="@+id/my_not_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/activity_horizontal_margin"
        >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/channel_deal_login"
                    android:scaleType="fitXY"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/header_login"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_16"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
            />
        </LinearLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/my_header_ad"
                android:scaleType="fitXY"
                android:layout_margin="@dimen/activity_horizontal_margin"
        />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/my_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
    >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="资产总额(元)"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                android:textSize="@dimen/text_size_16"
                android:textColor="@android:color/white"
                android:background="?attr/selectableItemBackground"
                android:drawableLeft="@drawable/my_total"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:drawableRight="@drawable/ic_right"
                android:paddingRight="@dimen/activity_horizontal_margin"
        />
        <com.robinhood.ticker.TickerView
                android:id="@+id/tv_my_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/huoqi_title_tese_b"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_32"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
        />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/activity_horizontal_margin"
            >
                <TextView
                        android:id="@+id/my_title_zuorishouyi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_title_zuorishouyi"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_14"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                />
                <com.robinhood.ticker.TickerView
                        android:id="@+id/my_zuorishouyi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/huoqi_title_tese_b"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_18"
                        android:layout_below="@+id/my_title_zuorishouyi"
                        android:textStyle="bold"/>
            </RelativeLayout>

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_blue_dark"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
            />
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/activity_horizontal_margin"
            >
                <TextView
                        android:id="@+id/my_title_keyongyue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_title_keyongyue"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_14"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                />
                <com.robinhood.ticker.TickerView
                        android:id="@+id/my_keyongyue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/huoqi_title_tese_b"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_18"
                        android:layout_below="@+id/my_title_keyongyue"
                        android:textStyle="bold"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>