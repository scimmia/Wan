<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="one_line">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="one_line_material">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
    </style>


    <style name="label_normal">
        <item name="android:layout_marginLeft">@dimen/size_8</item>
        <item name="android:layout_marginRight">@dimen/size_8</item>
        <item name="android:layout_marginBottom">@dimen/size_4</item>
        <item name="android:layout_marginTop">@dimen/size_4</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="title_left">
        <item name="android:layout_marginLeft">@dimen/size_8</item>
        <item name="android:layout_marginRight">@dimen/size_8</item>
        <item name="android:layout_marginBottom">@dimen/size_4</item>
        <item name="android:layout_marginTop">@dimen/size_4</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="title_right" parent="title_left">
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>
